alias e="open -a /Applications/Emacs.app"
alias rmr="rm -rf"
#alias vi="mvim -v"
alias vi="vim"
alias viconf="vi ~/.vimrc"
alias zshconf="vi ~/.zshrc.mine"
alias less="less -N -M"
alias src="source ~/.zshrc"

# global aliases
alias -g L="|less"
alias -g G="|grep"
alias -g XG="|xargs grep -Hn"
alias -g XG0="|xargs -0 grep -Hn"

export EDITOR="vi"

function grepr() {
   echo "find . -name \"$2\" | xargs grep $1"
}

path=(. $HOME/bin $HOME/.cabal/bin usr/local/sbin /usr/local/bin /sbin /bin /usr/sbin /usr/bin $HOME/bin/depot_tools /usr/local/Cellar/android-sdk/r16/tools/ /usr/local/Cellar/android-sdk/r16/platform-tools )

# ignore case for completion
zstyle ':completion:*' matcher-list 'm:{a-z}={A-Z}'

# prompt
PROMPT="%{[35m%}%U$USER@%m%u%%%{[m%} "
RPROMPT='%{[34m%}[%~]%{[m%}'

export NDK="/usr/local/Cellar/android-ndk/r6b/"
if [[ -s $HOME/.rvm/scripts/rvm ]] ; then
    source $HOME/.rvm/scripts/rvm ;
fi
